[user]
  name = Paulo Bortolotti
  email = bortolotti.paulo@gmail.com

[alias]
  bd = branch -D
  b = branch
  st = status
  pl = pull
  ps = push
  br = branch
  ck = checkout
  pb = pull --rebase
  cm = commit -am
  st = stash
  sp = stash pop
  sd = stash drop
  a = add -A
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
